

<body class="body-table">
    <div class="container-xl">
        <div class="table-responsive">
            <div class="table-wrapper">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Product</th>
                            <th>Name</th>
                            <th>Category</th>
                            <th>Brand</th>
                            <th>Size</th>
                            <th>Net Amount</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var orderId in ViewBag.Product)
                        {
                            @foreach (var item in orderId.Value)
                            {
                        <tr>
                            <td>@orderId.Key</td>
                            <td><img src="@("~/images/"+item.ImageName)" asp-append-version="true" width="140px" height="150px" /></td>
                            <td>@item.Name</td>
                            <td>@item.Category</td>
                            <td>@item.Brand</td>
                            <td>@item.Size</td>
                            <td>@item.Price</td>
                        </tr>
                         }
                         }
                               
                 </tbody>
                </table>
                @if (ViewBag.Product == null)
                {
                    <div class="alert alert-warning mt-3">
                        Sepetinizde ürün yok <br>
                        <button routerLink="/shop" class="btn btn-link p-0">
                            Alışverişe devam etmek için tıklayınız.
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
</body>




