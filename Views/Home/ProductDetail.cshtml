@model G151210078.Models.Product

@{
    ViewData["Title"] = "ProductDetail";
}



<div class="container-fluid">
    <h1>@Html.DisplayFor(model => model.Category) </h1> <h2>@Html.DisplayFor(model => model.Brand)</h2>
    <div class="row">
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-2">
                </div>
                <div class="col-md-8">
                    <img src="@("~/images/"+Model.ImageName)" asp-append-version="true" width="100%" height="100%" />
                </div>
                <div class="col-md-2">
                </div>
            </div>
        </div>
        <div class="col-md-6" style="border:1px groove black;padding-top:30px;">
            <div class="row">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-5">
                            <div style="font-size:25px;font-weight:bold;margin-bottom:10px">@Html.DisplayFor(model => model.Brand)</div>
                            <div style="font-size:16px;">@Html.DisplayFor(model => model.Name)</div>
                        </div>
                        <div class="col-md-5" style="border-left: 6px solid green; height:100%;margin-top:10px">
                            <div style="font-size:40px;color:orange;font-weight:bolder">@Html.DisplayFor(model => model.Price)</div>
                        </div>
                        <div class="col-md-2">
                        </div>
                    </div>
                    <div class="row" style="border-top: 3px solid; margin-top:20px;">
                        <div class="col-md-12">
                            <dl class="row">
                                <dt class="col-sm-4">
                                    @Html.DisplayNameFor(model => model.Name)
                                </dt>
                                <dd class="col-sm-8">
                                    @Html.DisplayFor(model => model.Name)
                                </dd>
                                <dt class="col-sm-4">
                                    @Html.DisplayNameFor(model => model.Category)
                                </dt>
                                <dd class="col-sm-8">
                                    @Html.DisplayFor(model => model.Category)
                                </dd>
                                <dt class="col-sm-4">
                                    @Html.DisplayNameFor(model => model.Brand)
                                </dt>
                                <dd class="col-sm-8">
                                    @Html.DisplayFor(model => model.Brand)
                                </dd>
                                <dt class="col-sm-4">
                                    @Html.DisplayNameFor(model => model.Color)
                                </dt>
                                <dd class="col-sm-8">
                                    @Html.DisplayFor(model => model.Color)
                                </dd>
                                <dt class="col-sm-4">
                                    @Html.DisplayNameFor(model => model.Size)
                                </dt>
                                <dd class="col-sm-8">
                                    @Html.DisplayFor(model => model.Size)
                                </dd>
                            </dl>
                            <div class="row">
                                <div class="col-md-3">

                                </div>
                                <div class="col-md-6">
                                    <a class="btn btn-warning btn-block" asp-controller="cart" asp-action="buy" asp-route-id="@Model.ID">Buy Now</a>
                                </div>
                                <div class="col-md-3">
                                    @if (ViewBag.productList != null)
                                    {
                                        foreach (var i in ViewBag.productList)
                                        {
                                            <div>
                                                i
                                            </div>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

