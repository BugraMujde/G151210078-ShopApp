
@{
    ViewData["Title"] = "OrderDetail";
}

<h1>OrderDetail</h1>

<div class="container pt-100 mb-5">

    <h1 class="mb-2">Alışveriş Sepetiniz</h1>
    <div class="row">
        <div class="col-8">

            <ng-container *ngIf="cart.itemCount>0">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Name</th>
                            <th>Category</th>
                            <th>Brand</th>
                            <th>Size</th>
                            <th>Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var orderId in ViewBag.OrderList)
                        {
                            @foreach (var item in orderId.Value)
                            {
                                <tr>
                                    <td><img src="@("~/images/"+item.ImageName)" asp-append-version="true" width="140px" height="150px" /></td>
                                    <td>@item.Name</td>
                                    <td>@item.Category</td>
                                    <td>@item.Brand</td>
                                    <td>@item.Size</td>
                                    <td>@item.Price</td>
                                    <td></td>
                                </tr>
                            }
                        }

                    </tbody>
                </table>
            </ng-container>


            @if (ViewBag.Product == null)
            {
                <div class="alert alert-warning mt-3">
                    Sepetinizde ürün yok <br>
                    <button routerLink="/shop" class="btn btn-link p-0">
                        Alışverişe devam etmek için tıklayınız.
                    </button>
                </div>
            }

        </div>
        <div class="col-4">
            <ng-container *ngIf="cart.itemCount>0">
                <div class="text-left">
                    <h4>Alışveriş Özeti</h4>
                </div>
                <div>
                    <a class="btn btn-primary btn-sm" asp-controller="home" asp-action="Index">Alışverişe Devam Et</a>
                </div>
            </ng-container>
        </div>
    </div>

</div>